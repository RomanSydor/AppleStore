@model AppleStore.Models.AirPods

@{
    ViewData["Title"] = $"{Model.AirPodsModel}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int amount = 1;
}

<br>
<h4>
    <a href="/AirPods/Models/@Model.AirPodsModel"> < AirPods</a>
</h4>
<br>
<div style="display: flex; justify-content: space-evenly">

    <img style="height: 310px" src="~/images/@Model.AirPodsModel .webp" alt="@Model.AirPodsModel-img" />

    <div style="margin-top: 70px">
        <h1>
            $ @Model.Price
        </h1>

        @if (Model.AmountOfProduct <= 0)
        {
            <h3 style="color:#fe5d00">
                Not Available
            </h3>
        }
        else
        {
            <br>
            <form action="/AirPods/AddToCart/@Model.Id/@amount" method="post">
                <div class="form-group">
                    <label class="control-label">Amount</label>
                    <input asp-for="@amount" class="form-control" min="1" max="@Model.AmountOfProduct" />
                </div>
                <h3>
                    <button type="submit" style="color:#18c7c7; background-color: #222222;
                     height:50px; width: 150px;" class="btn btn-default">
                        ADD TO CART
                    </button>
                </h3>
            </form>
        }
    </div>
    
    <div style="margin-top: 45px">
        <dl class="dl-horizontal">
            <dt>
                Model:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AirPodsModel)
            </dd>
            <br>
            <dt>
                Wireless charging:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.WirelessCharging)
            </dd>
            <br>
            <dt>
                Year of production:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.YearOfProduction)
            </dd>
            @*<br>
            <dt>
                Description:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>*@
        </dl>
    </div>
</div>