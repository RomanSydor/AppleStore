@model AppleStore.Models.IPad

@{
    ViewData["Title"] = $"{Model.IPadModel}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string currentMemory = Model.Memory;
    string currentModel = Model.TypeOfModel;
    string currentColor = Model.Color;
    string currentType = Model.Type;
    int amount = 1;

    @if (currentType == "Wi-Fi+LTE")
    {
        currentType = "Wi-Fi-pl-LTE";
    }
}
<br>
<h4>
    <a href="/IPad/Models/@Model.TypeOfModel"> < @Model.IPadModel</a>
</h4>

<div style="display: flex; justify-content: space-between;">
    <div style="text-align: center;">
        @if (Model.TypeOfModel == "iPad Air" || (Model.IPadModel == "iPad Mini 5" && Model.Color != "Gold"))
        {
            <img style="height: 480px; width: 480px;" src="~/images/@Model.IPadModel-@Model.Color-details .webp" alt="@Model.TypeOfModel-@Model.Color-img" />
        }
        else if (Model.TypeOfModel == "iPad Mini 5" && Model.Color == "Gold")
        {
            <img style="height: 480px; width: 400px;" src="~/images/@Model.IPadModel-@Model.Color-details .webp" alt="@Model.TypeOfModel-@Model.Color-img" />
        }
        else
        {
            <img style="height: 500px" src="~/images/@Model.IPadModel-@Model.Color-details .webp" alt="@Model.TypeOfModel-@Model.Color-img" />
        }

        @if (Model.AmountOfProduct <= 0)
        {
            <h3 style="color:#fe5d00; text-align: center;">
                Not Available
            </h3>
        }
        else
        {
            <form style="padding-top:20px" action="/IPad/AddToCart/@Model.Id/@amount" method="post">
                <div>
                    <label style="font-size:20px; text-align:center;">Amount</label>
                    <br>
                    <input style="margin-left: 190px;" asp-for="@amount" class="col-lg-3" min="1" max="@Model.AmountOfProduct" />
                </div>
                <h3>
                    <button type="submit" style="color:#18c7c7; background-color: #222222;
                    margin-top: 25px; height:50px; margin-left: -312px; width: 150px;" class="btn btn-default">
                        ADD TO CART
                    </button>
                </h3>
            </form>
        }
    </div>
    <div>
        @if (Model.TypeOfModel == "iPad Pro 12.9" || Model.TypeOfModel == "iPad Pro 11")
        {
            <br><br>
            <h5 style="font-size:20px; text-align:center;"><b>Color</b></h5>
            <nav style="font-size:17px">
                <a href="/IPad/Details/@currentModel/@currentType/Space Gray/@currentMemory">
                    <img style="height:25px;" src="~/images/space-gray.jpg" alt="space-gray-img" />
                    Space Gray
                </a>
                <br><br>
                    <a href="/IPad/Details/@currentModel/@currentType/Silver/@currentMemory">
                        <img style="height:25px;" src="~/images/silver.jpg" alt="silver-img" />
                        Silver
                    </a>
            </nav>
            <br>
            <h5 style="font-size:20px; text-align:center;"><b>Memory</b></h5>
            <nav style="font-size:17px">
                <a href="/IPad/Details/@currentModel/@currentType/@currentColor/128 Gb">
                    128 Gb
                </a>
                <br><br>
                <a href="/IPad/Details/@currentModel/@currentType/@currentColor/256 Gb">
                    256 Gb
                </a>
                <br><br>
                <a href="/IPad/Details/@currentModel/@currentType/@currentColor/512 Gb">
                    512 Gb
                </a>
                <br><br>
                <a href="/IPad/Details/@currentModel/@currentType/@currentColor/1 Tb">
                    1 Tb
                </a>
            </nav>
        }
        else if (Model.TypeOfModel == "iPad 10.2" || Model.TypeOfModel == "iPad Air" || Model.TypeOfModel == "iPad Mini 5")
        {
            <br><br><br><br><br>
            <h5 style="font-size:20px; text-align:center;"><b>Color</b></h5>
            <nav style="font-size:17px">
                <a href="/IPad/Details/@currentModel/@currentType/Space Gray/@currentMemory">
                    <img style="height:25px;" src="~/images/space-gray.jpg" alt="space-gray-img" />
                    Space Gray
                </a>
                <br><br>
                    <a href="/IPad/Details/@currentModel/@currentType/Silver/@currentMemory">
                        <img style="height:25px;" src="~/images/silver.jpg" alt="silver-img" />
                        Silver
                    </a>
                <br><br>
                    <a href="/IPad/Details/@currentModel/@currentType/Gold/@currentMemory">
                        <img style="height:25px;" src="~/images/gold.jpg" alt="gold-img" />
                        Gold
                    </a>
            </nav>
            <h5 style="font-size:20px; text-align:center;"><b>Memory</b></h5>
            @if (Model.TypeOfModel == "iPad 10.2")
            {
                <br>
                <nav style="font-size:17px">

                    <a href="/IPad/Details/@currentModel/@currentType/@currentColor/32 Gb">
                        32 Gb
                    </a>
                    <br><br>
                    <a href="/IPad/Details/@currentModel/@currentType/@currentColor/128 Gb">
                        128 Gb
                    </a>
                </nav>
            }
            @if (Model.TypeOfModel == "iPad Air" || Model.TypeOfModel == "iPad Mini 5")
            {
                <br>
                <nav style="font-size:17px">

                    <a href="/IPad/Details/@currentModel/@currentType/@currentColor/64 Gb">
                        64 Gb
                    </a>
                    <br><br>
                    <a href="/IPad/Details/@currentModel/@currentType/@currentColor/256 Gb">
                        256 Gb
                    </a>
                </nav>
            }
        }
        <br>
        <h5 style="font-size:20px; text-align:center;"><b>Type</b></h5>
        <nav style="font-size:17px">
            <a href="/IPad/Details/@currentModel/Wi-Fi/@currentColor/@currentMemory">
                Wi-Fi
            </a>
            <br><br>
            <a href="/IPad/Details/@currentModel/Wi-Fi-pl-LTE/@currentColor/@currentMemory">
                Wi-Fi+LTE
            </a>
        </nav>
        <br>
        <h1>
            $ @Model.Price
        </h1>
    </div>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Model:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.IPadModel)
            </dd>
            <br>
            <dt>
                Memory:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Memory)
            </dd>
            <br>
            <dt>
                Color:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Color)
            </dd>
            <br>
            <dt>
                Type:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>
            <br>
            <dt>
                Screen type:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ScreenType)
            </dd>
            <br>
            <dt>
                Screen size:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ScreenSize)"
            </dd>
            <br>
            <dt>
                Processor:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Processor)
            </dd>
            <br>
            <dt>
                Ram:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ram) Gb
            </dd>
            <br>
            <dt>
                Main camera:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MainCamera) MP
            </dd>
            <br>
            <dt>
                Front camera:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FrontCamera) MP
            </dd>
            <br>
            <dt>
                Year of production:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.YearOfProduction)
            </dd>
            @*<br>
            <dt>
                Description:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>*@
        </dl>
    </div>
</div>