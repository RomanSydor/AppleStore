@model IEnumerable<AppleStore.Models.IPad>

@{
    ViewData["Title"] = "iPad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Models</h2>*@
<br />
<h4>
    <a href="/IPad/Index">< iPads</a>
</h4>
<table>
    <tr>
        <td>
            @foreach (var item in Model)
            {
            <nav>
                <br>
                <a href="/IPad/Details/@item.Id" style="text-align: center;">
                    <img src="~/images/@item.IPadModel-@item.Color .webp" alt="@item.TypeOfModel-@item.Color-img" />
                    <br>
                    <h4 style="margin-right: 78%;">
                        <span>@item.IPadModel</span>
                        <br>
                        <span>@item.Type</span>
                        <br>
                        <span>@item.Memory</span>
                        <br>
                        <span>@item.Color</span>
                        <br>
                        <br>
                        <span style="font-size:25px;">$ @item.Price</span>
                        <br>
                        @if (item.AmountOfProduct <= 0)
                        {
                            <span style="font-size:17px; color:#fe5d00">Not Available</span>
                            <br>
                        }
                        else
                        {
                            <span style="font-size:17px; color:#40b157">Available  Now</span>
                            <br>
                        }
                    </h4>
                </a>
                <br>
            </nav>
                }
            </td>
        </tr>
    </table>
