@model AppleStore.Models.Purchase

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="dl-horizontal" style="font-size: 20px;">
        <dt>
            First name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)<br />
        </dd>
        <dt>
            Last name:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Phone number:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            E-mail:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Date:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        @*<dt>
            Products list:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BoughtProds)
        </dd>*@
        @if (Model.PromoCode != null)
        {
            <dt>
                Discount:
            </dt>
            <dd>
                @if (Model.PromoValue == "%")
                {
                    @Model.PromoAmount @Model.PromoValue
                }
                @if (Model.PromoValue == "$")
                {
                    @Model.PromoValue @Model.PromoAmount
                }
            </dd>

        }
        <dt>
            Total price:
        </dt>
        <dd>
            $ @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Purchase" asp-action="AfterPurchase"
       style="margin-left: 110px; height:50px; width: 150px;">
        <button class="btn btn-default" style=" height:50px; width:150px; color:#18c7c7; background-color: #222222;
                            font-size: 22px">
            BUY
        </button>
    </a>
    <a href="/Purchase/Delete/@Model.Id" style="margin-left: 110px; height:50px; width: 150px;">
        <button class="btn btn-default" style=" height:50px; width:150px; color:red; background-color: #222222;
                            font-size: 22px">
            BACK
        </button>
    </a>
</div>
